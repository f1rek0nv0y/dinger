<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="accent">#FFECB3</color>
    <color name="ic_launcher_adaptive_background">#000000</color>
    <color name="primary">#263238</color>
    <color name="primary_dark">#000A12</color>
    <color name="text_primary">#FFAB40</color>
    <color name="text_secondary">#FAE7AF</color>
    <color name="window_background">#273339</color>

    <dimen name="layout_content_spacing">16dp</dimen>
    <dimen name="layout_grid_spacing">4dp</dimen>

    <string name="app_label" translatable="false">dinger</string>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:progressBarStyleHorizontal">
            @style/Widget.AppCompat.ProgressBar.Horizontal
        </item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
</resources>
